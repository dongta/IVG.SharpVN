@*@model IEnumerable<IVG.Web.Mvc.EF.DanhSachCaseRequest>*@
@model IVG.Web.Mvc.Models.SCOptionSet
@{
    ViewBag.Title = "Service Request";
}
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Javascripts/Dealer/ServiceRequest.js"></script>
<div class="d-flex justify-content-between">
    <div class="">
        <a href="/"><i class="fa fa-home"></i> Home </a>  >
        <a href="#"> Service request</a>
    </div>
    <div class="col-sm-4 input-group" style="padding-right:0 !important;padding-top:2px !important">
        <input type="text" name="textsearch" placeholder="Enter text to search" class="form-control form-control-sm" style="border-right:none" />
        <div class="@*btn-group*@">
            <button name="quickSearch" id="quickSearch" class="btn btn-sm btn-light" style="        border-left: none;
        border: 1px solid #ced4da;
        border-radius: 0;">
                Search
                <i class="fa fa-search"></i>
            </button>
            <a id="btnCollapseFilter" class="btn btn-sm btn-primary" style="border-radius:0" data-toggle="collapse" href="#collapseFilter" role="button" aria-expanded="false" aria-controls="collapseFilter">
                Filter
                <i class="fa fa-filter"></i>
            </a>
        </div>
    </div>
</div>
<div id="collapseFilter" class="collapse" style="margin-bottom: 10px; margin-top: 10px; padding-bottom: 10px; border-top: 1px solid #eee;border-bottom: 1px solid #eee;">
    <div class="row bg-info text-white" style="margin:0;padding-left:15px;"><i class="fa fa-filter">Advanced Find</i></div>
    <form id="formFilter">
        <div class="row bg-light" style="margin:0;padding-left:15px; padding-bottom:15px;">
            <div class="col-sm-3">
                <label>Mã phiếu</label>
                <input name="ma" type="text" class="form-control form-control-sm" />
                <label>Mã tham chiếu</label>
                <input name="maThamChieu" type="text" class="form-control form-control-sm" />
                <label>Số Serial</label>
                <input name="soSerial" type="text" class="form-control form-control-sm" />
            </div>
            <div class="col-sm-3">
                <label>Khách hàng</label>
                <input name="tenKhachHang" type="text" class="form-control form-control-sm" />
                <label>Điện thoại</label>
                <input name="soDienThoai" type="text" class="form-control form-control-sm" />
                <label>Địa chỉ</label>
                <input name="diaChi" type="text" class="form-control form-control-sm" />
            </div>
            <div class="col-sm-3">
                <label>Tên hoặc mã sản phẩm</label>
                <input name="sanPham" type="text" class="form-control form-control-sm" />
                <label>Ngày tiếp nhận từ</label>
                <input name="ngayTiepNhanTu" type="date" class="form-control form-control-sm" />
                <label>Ngày tiếp nhận tới</label>
                <input name="ngayTiepNhanToi" type="date" class="form-control form-control-sm" />
            </div>
            <div class="col-sm-3">
                <label>Trạng thái sửa chữa</label>
                <select name="trangThaiSuachua" type="text" class="form-control form-control-sm">
                    <option value="">Chọn trạng thái sửa chữa</option>
                    @foreach (var item in Model.TrangThaiSuaChua)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <label>Ngày tạo từ</label>
                <input name="ngayTaoTu" type="date" class="form-control form-control-sm" />
                <label>Ngày tạo tới</label>
                <input name="ngayTaoToi" type="date" class="form-control form-control-sm" />
            </div>
        </div>
        <div class="d-flex justify-content-between bg-light">
            <div></div>
            <div style="padding-right:15px !important;">
                <div class="btn-group">
                    <div id="btnClearFilter" class="btn btn-sm btn-danger"><i class="fa fa-close"> Clear</i></div>
                    <div id="btnFilter" class="btn btn-sm btn-primary"><i class="fa fa-search"> Search</i></div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="w-100">
    <a href="/dealer/addrequest" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Add New Record</a>
</div>
@*datatable*@

<div class="w-100">
    <div style="max-width:100%; overflow-x:auto">
        <table id="ListCaseRequest" class="table table-striped table-hover table-sm table-bordered" style="width:2850px !important">
            <thead>
                <tr class="bg-light">
                    <th>Mã </th>
                    <th>Mã tham chiếu</th>
                    <th>Số serial </th>
                    <th>Khách hàng </th>
                    <th>Địa chỉ </th>
                    <th>Số điện thoại </th>
                    <th>Số khác </th>
                    <th>Sản phẩm </th>
                    <th>Nguyên nhân lỗi </th>
                    <th>ASC </th>
                    <th>Kỹ thuật viên </th>
                    <th>Người tiếp nhận </th>
                    <th>Ngày tiếp nhận </th>
                    <th>Trạng thái </th>
                    <th>Diễn giải </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

