@model IEnumerable<IVG.Web.Mvc.EF.DanhSachCaseRequest>
@{
    ViewBag.Title = "Service Request";
}
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Javascripts/Dealer/ListServiceRequest.js"></script>
<div class="d-flex justify-content-between">
    <div class="">
        <a href="/"><i class="fa fa-home"></i> Home </a>  >
        <a href="#"> Service request</a>
    </div>
    <div class="col-sm-4 input-group" style="padding-right:0 !important;padding-top:2px !important">
        <input type="text" autofocus name="textsearch" placeholder="Enter text to search" class="form-control form-control-sm" />
        <div class="@*btn-group*@">
            <button class="btn btn-sm btn-primary"><i class="fa fa-search"></i></button>
            <a class="btn btn-sm btn-primary" data-toggle="collapse" href="#collapseFilter" role="button" aria-expanded="false" aria-controls="collapseFilter">
                <i class="fa fa-filter"></i>
            </a>
        </div>
    </div>
</div>
<div id="collapseFilter" class="collapse" style="margin-bottom: 10px; margin-top: 10px; padding-bottom: 10px; border-top: 1px solid #eee;border-bottom: 1px solid #eee;">
    <div class="row bg-info text-white" style="margin:0;padding-left:15px;"><i class="fa fa-filter">Advanced Find</i></div>
    <div class="row bg-light" style="margin:0;padding-left:15px; padding-bottom:15px;">
        <div class="col-sm-3">
            <label>Code</label>
            <input type="text" class="form-control form-control-sm" />
            <label>Reference code</label>
            <input type="text" class="form-control form-control-sm" />
            <label>Serial No.</label>
            <input type="text" class="form-control form-control-sm" />
        </div>
        <div class="col-sm-3">
            <label>Product codes</label>
            <input type="text" class="form-control form-control-sm" />
            <label>ASC</label>
            <select type="text" class="form-control form-control-sm">
                <option></option>
            </select>
            <label>Warranty</label>
            <select type="text" class="form-control form-control-sm">
                <option></option>
            </select>
        </div>
        <div class="col-sm-3">
            <label>Customer name</label>
            <input type="text" class="form-control form-control-sm" />
            <label>Purchase date from</label>
            <input type="date" class="form-control form-control-sm" />
            <label>Purchase date to</label>
            <input type="date" class="form-control form-control-sm" />
        </div>
        <div class="col-sm-3">
            <label>State</label>
            <select type="text" class="form-control form-control-sm">
                <option></option>
            </select>
            <label>Received date from</label>
            <input type="date" class="form-control form-control-sm" />
            <label>Received date to</label>
            <input type="date" class="form-control form-control-sm" />
        </div>
    </div>
    <div class="d-flex justify-content-between bg-light">
        <div></div>
        <div style="padding-right:15px !important;">
            <div class="btn-group">
                <button class="btn btn-sm btn-danger"><i class="fa fa-close"> Clear</i></button>
                <button class="btn btn-sm btn-primary"><i class="fa fa-search"> Search</i></button>
            </div>
        </div>
    </div>

</div>
<div class="w-100">
    <a href="/dealer/addrequest" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Add New Record</a>
</div>
@*datatable*@

<div class="w-100">
    <div style="max-width:100%; overflow-x:auto">
        <table id="ListCaseRequest" class="table table-striped table-hover table-sm table-bordered" style="width:800px !important">
            <thead>
                <tr class="bg-light">
                    <th>Mã phiếu</th>
                    <th>Mã tham chiếu</th>
                    <th>Tên khách hàng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaPhieu</td>
                        <td>@item.MaThamChieu</td>
                        <td>@item.TenKhachHang</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

