
@{
    ViewBag.Title = "Users";
}
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Javascripts/Admin/Users.js"></script>

<div class="d-flex justify-content-between">
    <div class="">
        <a href="/"><i class="fa fa-home"></i> Home </a>  >
        <a href="#"> Users</a>
    </div>
    <div class="col-sm-4 input-group" style="padding-right:0 !important;padding-top:2px !important">
        <input type="text" name="textsearch" placeholder="Enter text to search" class="form-control form-control-sm" style="border-right:none" />
        <div class="@*btn-group*@">
            <button name="quickSearch" id="quickSearch" class="btn btn-sm btn-light" style="        border-left: none;
        border: 1px solid #ced4da;
        border-radius: 0;">
                Search
                <i class="fa fa-search"></i>
            </button>
            <a id="btnAddUser" class="btn btn-sm btn-primary" href="/admin/adduser" style="border-radius:0">
                Add new user
                <i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
</div>

@*datatable*@

<div class="w-100">
    <div style="max-width:100%; overflow-x:auto">
        <table id="tblUsers" class="table table-striped table-hover table-sm table-bordered" style="width:2000px !important">
            <thead>
                <tr class="bg-light">
                    <th>Tên đăng nhập</th>
                    <th>Họ và tên</th>
                    <th>Địa chỉ </th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Số điện thoại khác</th>
                    <th>Mô tả</th>
                    <th>Trung tâm</th>
                    <th>Trạng thái </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

