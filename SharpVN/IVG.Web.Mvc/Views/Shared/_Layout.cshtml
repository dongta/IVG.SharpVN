<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />
    <script src="~/Scripts/select2.js"></script>
    <style>
        .menu1 > a {
            width: 150px !important;
        }

        .menu1 > span {
            width: 200px !important;
        }
    </style>
</head>
<body style="padding-top:0 !important">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <div class="row">
                    <div class="d-inline">
                        <div>
                            <a href="/home/index">
                                <img src="~/Resources/images/logo.png" />
                            </a>
                        </div>
                    </div>
                    <div class="d-inline ">
                        <div class="d-flex justify-content-center">
                            My Portal @Html.Raw("@SEM")
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="nav navbar navbar-inverse w-100 menu1">
                                <span class="text-truncate">Welcome @User.Identity.Name tôi là ai va ai là tôi?</span>
                                <a href="/user/myprofile"> <i class="fa fa-user"> My profile </i> </a>
                                <a href="/user/changepassword" style="padding-left:5px;"> <i class="fa fa-key"> Change password  </i>  </a>
                                <a href="/user/logout" class=""> <i class="fa fa-lock"> Logout </i></a>
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    @if (User.Identity.IsAuthenticated)
                    {
                        Html.RenderAction("GetMenu", "User");
                    }
                </div>
            </div>

        </div>
    </div>
    <div class="container body-content" style="padding:0;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IVG</p>
        </footer>
    </div>

</body>
</html>
